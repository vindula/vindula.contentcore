<html metal:use-macro="here/main_template/macros/master">
    <head>
        <metal:js fill-slot="javascript_head_slot">
          
            <script type="text/javascript">

                $j(document).ready(function(){
                    /* Aba de edição do conteudo*/
                    $j('#contentview-view').removeClass('selected');
                    $j('#contentview-workflow').addClass('selected');

                    $j('input[name="status"]').click(function(){
                      var value = $j(this).val();

                      if (value=='enviar_para'){
                        $j('#nivel').removeAttr('disabled');
                      }else{
                        $j('#nivel').attr('disabled',true);
                        $j('#nivel').val('--')
                      }

                    });

                });

            </script>
        </metal:js>
        <metal:styleslot fill-slot="style_slot">
            <style type="text/css">
                #field-arquivoauxiliarsolicitacao2{
                  display: none;
                }
                #load-form div.field{
                  float: left;
                }
                #load-form div.hidden_field{
                  float: none;
                }
                #load-form div.float_left{
                  clear: none;
                  margin-left: 20px;
                }
                
            </style>
        </metal:styleslot>


    </head>
    <body>
        <div metal:fill-slot="main">
            <meta:macro metal:define-macro="page-view">
                <div>
                    <form action="" name="managepedido" enctype="multipart/form-data" method="POST"
                          tal:attributes="action string:${context/absolute_url}/item-pedidos" id="load-form">
                        <fieldset tal:define="id_instance request/form/id_instance|string:0">
                            <legend>Pedidos em Solicitações</legend>
                        
                            <tal:def define="fields view/get_fields|python:[]">

                              <tal:rep repeat="field fields">
                                <div class="field_value" tal:condition="python: not field.name_field in view.back_list">
                                    <b tal:content="field/title|string: ">Title</b>:

                                    <tal:def define="valor_pedido python:view.get_value_field(id_instance, field.name_field)">

                                        <tal:error tal:on-error="string: Erro ao carregar campo ${field/title|nothing}">
                                          <span tal:define="tipo field/type_fields|nothing;
                                                            valor_blob valor_pedido/value_blob|nothing;
                                                            valor_normal valor_pedido/value|nothing;
                                                            
                                                            valor python: valor_normal or valor_blob;
                                                            id_campo valor_pedido/id|nothing;"
                                                tal:content="structure python:view.geraHTMLContent(id_campo,tipo,valor)" />
                                        </tal:error>

                                    </tal:def>
                                </div>
                              </tal:rep>

                                <fieldset>
                                  <legend>Gerencia esta solicitação</legend>
                                    
                                    <input type="hidden" name="id_instance" id="id_instance" value="" tal:attributes="value id_instance"/>
                                    <input type="hidden" name="submited:boolean" id="submited" value="True" />

                                    <input type="hidden" name="email" id="email" value=""
                                           tal:define="dados_user python: view.get_user(id_instance);"
                                           tal:attributes="value dados_user/email|string: " />
                  
                                    <tal:def define="status_save python:view.get_value_field(id_instance, u'status');
                                                     status_save status_save/value|string: ;
                                                     nivel_save python:view.get_value_field(id_instance, u'nivel');
                                                     nivel_save nivel_save/value|string: ;
                                                     obj_save python:view.get_value_field(id_instance, u'observacao_responsavel');
                                                     obj_save obj_save/value|string: ;

                                                     cotacao01_save python:view.get_value_field(id_instance, u'cotacao01');
                                                     cotacao01_save cotacao01_save/value|string: ;

                                                     cotacao02_save python:view.get_value_field(id_instance, u'cotacao02');
                                                     cotacao02_save cotacao02_save/value|string: ; 

                                                     cotacao03_save python:view.get_value_field(id_instance, u'cotacao03');
                                                     cotacao03_save cotacao03_save/value|string: ;

                                                     fontecotacao01_save python:view.get_value_field(id_instance, u'fontecotacao01');
                                                     fontecotacao01_save fontecotacao01_save/value|string: ; 
                                                     
                                                     fontecotacao02_save python:view.get_value_field(id_instance, u'fontecotacao02');
                                                     fontecotacao02_save fontecotacao02_save/value|string: ; 

                                                     fontecotacao03_save python:view.get_value_field(id_instance, u'fontecotacao03');
                                                     fontecotacao03_save fontecotacao03_save/value|string: ; 

                                                     arquivoauxiliar2_save python:view.get_value_field(id_instance, u'arquivoauxiliarsolicitacao2');">
                                     

                                      <div class="field " id="field-cotacao01">
                                        <label for="cotacao01">Cotação 01</label>
                                        <div class="formHelp">Informe o valor em Reais</div>
                                        <div></div>
                                        <input id="cotacao01" type="text" value="" name="cotacao01" size="25"
                                               tal:attributes="value cotacao01_save" />  
                                      </div>

                                      <div class="field float_left" id="field-fontecotacao01">
                                        <label for="fontecotacao01">Companhia Aérea 01</label>
                                        <div class="formHelp">Informe o nome da empresa</div>
                                        <div></div>
                                        <input id="fontecotacao01" type="text" value="" name="fontecotacao01" size="25"
                                               tal:attributes="value fontecotacao01_save" />  
                                      </div>

                                      <div class="field " id="field-cotacao02">
                                        <label for="cotacao02">Cotação 02</label>
                                        <div class="formHelp">Informe o valor em Reais</div>
                                        <div></div>
                                        <input id="cotacao02" type="text" value="" name="cotacao02" size="25"
                                               tal:attributes="value cotacao02_save" />
                                      </div>

                                      <div class="field float_left" id="field-fontecotacao02">
                                        <label for="fontecotacao02">Companhia Aérea 02</label>
                                        <div class="formHelp">Informe o nome da empresa</div>
                                        <div></div>
                                        <input id="fontecotacao02" type="text" value="" name="fontecotacao02" size="25"
                                               tal:attributes="value fontecotacao02_save" />  
                                      </div>


                                      <div class="field " id="field-cotacao03">
                                        <label for="cotacao03">Cotação 03</label>
                                        <div class="formHelp">Informe o valor em Reais</div>
                                        <div></div>
                                        <input id="cotacao03" type="text" value="" name="cotacao03" size="25"
                                               tal:attributes="value cotacao03_save" />
                                      </div>

                                      <div class="field float_left" id="field-fontecotacao03">
                                        <label for="fontecotacao03">Companhia Aérea 03</label>
                                        <div class="formHelp">Informe o nome da empresa</div>
                                        <div></div>
                                        <input id="fontecotacao03" type="text" value="" name="fontecotacao03" size="25"
                                               tal:attributes="value fontecotacao03_save" />  
                                      </div>

                                      <div class="visualClear"></div>

                                      <div class="field " id="field-arquivoauxiliarsolicitacao2">
                                          <label for="arquivoauxiliarsolicitacao2">Arquivo Auxiliar</label>
                                          <div class="formHelp">Faça upload de um arquivo auxiliar a esta solicitação.</div>
                                          <div tal:condition="arquivoauxiliar2_save">
                                              <a target="_blank" tal:attributes="href string:${context/absolute_url}/form-file?id=${arquivoauxiliar2_save/id|nothing}">Download arquivo</a><br />
                                          </div>
                                          <input id="arquivoauxiliarsolicitacao2" type="file" value="" name="arquivoauxiliarsolicitacao2" size="25">
                                      </div>

                                      <tal:rep repeat="item view/list_status|python:[]">
                                        <input type="radio" name="status" id="status" value=""  
                                                tal:define="status_item item/id|nothing" 
                                               tal:attributes="checked python:status_save == status_item and 'checked' or '';
                                                               value status_item"  />
                                          <label for="status" tal:content="item/valor|nothing">Aprovado</label><br/>

                                      </tal:rep>

                                      <select name="nivel" id="nivel" tal:attributes="disabled python:status_save != 'enviar_para' and 'disabled' or ''">
                                          <option value="" >-----------</option>
                                          <tal:rep repeat="item view/list_user_nivel|python:[]">

                                              <option value="" tal:attributes="value item;
                                                                               selected python:item==nivel_save and 'selected' or ''"
                                                               tal:content="item">administrador</option>
                                          </tal:rep>

                                      </select>
                                      <br /> 

                                      <label for="observacao_responsavel">Observação</label>
                                      <textarea id='observacao_responsavel' name='observacao_responsavel' rows='5' cols='40' 
                                                    tal:content="obj_save"></textarea>
                                  
                                  </tal:def>
                                   

                                </fieldset>

                                <!-- Botões de ação -->    
                                <fieldset>
                                  <br/>
                                  <div style="float:left; width:100%">
                                    <input style="width:100px" class="button-erp" type="button"
                                           tal:attributes="onClick string: location.href='${context/absolute_url}/list-pedidos'" value="Voltar" name="form.voltar">
                                    <input style="width:100px" class="button-erp" type="submit" value="Salvar" name="form.submited">
                                  </div>
                                </fieldset>

                            </tal:def>

                        </fieldset>
                    </form>
                </div>
            </meta:macro>
        </div>
    </body>
</html>