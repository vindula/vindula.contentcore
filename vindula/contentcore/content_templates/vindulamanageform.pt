<html metal:use-macro="here/main_template/macros/master">
	<head>
		<metal:styleslot fill-slot="style_slot">
    		<link rel="stylesheet" href="" type="text/css" tal:attributes="href string:${view/static}/form_style.css">
		</metal:styleslot>
	</head>
	<body>
		<div metal:fill-slot="content" tal:define="data view/load_form | python:{};
												   data_default view/list_default|python:{}">
		    
		    <div id="content" >
				<h1>Criação de Formularios do Vindula</h1>	
				<div id="interna" >
					<!-- Botões de ação--> 	
				   	<fieldset>
				   		<legend>A&ccedil;&atilde;o</legend>
						<div style="float:left; width:100%">
							<a class="button" href="@@vindula-control-panel" alt="Voltar" title="Voltar">
								<input style="width:100px" class="button-erp" type="button" value="Voltar" name="form.voltar">
							</a>
							<a class="button" href="add-form"  alt="Adicionar novo formulario" title="Adicionar novo formulario">							
								<input class="button-erp" type="button" value="Adicionar novo formulario" name="form.submited">
							</a>
							<a class="button" href="add-defaut-value"  alt="Adicionar valor padrão" title="Adicionar valor padrão">							
								<input class="button-erp" type="button" value="Adicionar valor padrão" name="form.submited">
							</a>
						</div>
					</fieldset>
			        <fieldset>
		            	<legend>Formularios Cadastrados</legend>
							<div id="list-forns" tal:condition="data">
								<table width="100%">
									<tr>
										<th width="80%">Ver Formulario</th>
										<th width="20%">Editar Formulario</th>
									</tr>
									<tal:rep repeat="item data">
										<tr>
											<td>
												<a tal:attributes="href string:${here/portal_url}/view-form?forms_id=${item/id|nothing}"
													alt="Visualizar formulario" title="Visualizar formulario" class="edit-link">
												<span tal:content="item/name_form|nothing"></span></a>
												<p tal:content="item/description_form|nothing"></p>	
											</td>
											<td>
												<a tal:attributes="href string:${here/portal_url}/edit-form?forms_id=${item/id|nothing}"
													alt="Editar Formulario" title="Editar Formulario">Editar</a>
											</td>	
										</tr>
									</tal:rep>	
								</table>
								
							</div>
					</fieldset>
					<fieldset>
		            	<legend>Lista de Valor Padrão</legend>
							<div id="list-forns" tal:condition="data_default">
								<table width="100%">
									<tr>
										<th>Metodo</th>
										<th>Nome do metodo</th>
										<th width="10%">Editar </th>
										<th width="10%">Excluir </th>
									</tr>
									<tal:rep repeat="item data_default">
										<tr>
											<td tal:content="item/value|nothing" />
											<td tal:content="item/lable|nothing" />
											
											<td>
												<a tal:attributes="href string:${here/portal_url}/edit-defaut-value?id=${item/id|nothing}"
													alt="Editar Valor Padrão" title="Editar Valor Padrão">Editar</a>	
											</td>
											<td>
												<a tal:attributes="href string:${here/portal_url}/excluir-default-value?id=${item/id|nothing}"
													alt="Excluir Valor Padrão" title="Excluir Valor Padrão">Excluir</a>
											</td>	
										</tr>
									</tal:rep>	
								</table>
							</div>
					</fieldset>
				</div>
		    </div>
		</div>  
	</body>
</html>